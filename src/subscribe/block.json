{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "fbs-block/subscribe",
	"version": "0.1.0",
	"title": "Subscribe",
	"category": "fbs-blocks",
	"icon": "email",
	"description": "Add a subscribe form",
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"title": {
			"type": "string",
			"source": "text",
			"selector": "h2",
			"default": "Let's keep in touch"
		},
		"description": {
			"type": "string",
			"source": "text",
			"selector": "p",
			"default": "Subscribe to keep up with fresh news and exciting updates. We promise not to spam you!"
		},
		"button": {
			"type": "string",
			"source": "text",
			"default": "Send"
		},
		"headingColor": {
			"type":"string",
			"default":"#333333"
		},
		"descriptionColor": {
			"type":"string",
			"default":"#6d6d6d"
		},
		"buttonColor": {
			"type":"string",
			"default":"#ffffff"
		},
		"formBackground": {
			"type":"string",
			"default":"#ffffff"
		},
		"formPadding": {
			"type":"object",
			"default":{
				"top": "80px",
				"bottom": "80px",
				"left": "0",
				"right": "0"
			}
		},
		"buttonBackground": {
			"type":"string",
			"default":"#3D9FFF"
		}
	},
	"textdomain": "fbs-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
